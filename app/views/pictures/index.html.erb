<div class="button-div">
  <% if current_user %>
    <form action="/users/<%= current_user.id%>/pictures/new">
      <input type="submit" class="btn btn-default btn-lg btn-block" value="Add a picture">
    </form>
  <% end %>
</div>

<% @pictures.each do |picture| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= image_tag picture.image.url(:medium) %>
    </div>
    <div class="panel-footer">
      <div>
        <span class="description"><%= picture.description %></span>
        <% if current_user && current_user.id == picture.user_id %>
          <span><%= link_to '', picture_path(picture), class: 'delete glyphicon glyphicon-trash', method: :delete %></span>
          <%= link_to '', '#', class: 'edit glyphicon glyphicon-edit' %>
        <% end %>
      </div>
      <div class='edit_description'>
        <%= form_for picture do |f| %>
          <%= f.text_area :description, class: 'edit_textarea form-control', name: 'edit_description' %>
          <%= link_to '', edit_picture_path(picture), class: 'save glyphicon glyphicon-floppy-saved' %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
